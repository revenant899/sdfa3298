@model CreateCategoryVM

<h1 class="text-center mb-3">Створення категорії</h1>
<form asp-action="Create" method="post" class="w-50 m-auto p-3">
    <div class="form-group w-50 m-auto">
        <label for="Name" class="form-label">Назва</label>
        <input asp-for="Name" name="Name" class="form-control" type="text" />
        <div class="ms-1">
            <span asp-validation-for="Name" class="font-weight-bold text-danger small"></span>
        </div>
    </div>
    <div class="w-50 m-auto d-flex">
        <input class="btn btn-success flex-grow-1 mx-1 my-3" type="submit" value="Створити" />
        <a asp-action="Index" class="btn btn-dark flex-grow-1 mx-1 my-3">Повернутися</a>
    </div>
</form>